<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="12dp"
    android:id="@+id/cardview_myreserve_self"
    android:layout_marginBottom="1dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/badminton"
        android:background="#00FFFFFF"
        android:padding="20dp"
        android:id="@+id/cardview_myreserve_image" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/cardview_myreserve_image"
        android:layout_toEndOf="@+id/cardview_myreserve_image"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_toRightOf="@+id/cardview_myreserve_image"
            android:layout_toEndOf="@+id/cardview_myreserve_image"
            android:id="@+id/cardview_myreserve_header"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="top|left"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:padding="6dp"
            android:gravity="center"
            android:id="@+id/cardview_myreserve_time"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />
    </LinearLayout>
</RelativeLayout>