<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#01579B</item>
        <item name="colorAccent">#03A9F4</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="minimalTextForCollapsingLayout" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="NoShadowAppTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.Holo.RatingBar.Small"></style>
    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>
</resources>