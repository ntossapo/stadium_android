<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:id="@+id/cardview_friend_self"
    android:layout_marginBottom="1dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:id="@+id/cardview_friend_picture"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/cardview_friend_checker"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/cardview_friend_name"
        android:layout_toRightOf="@id/cardview_friend_picture"
        android:layout_alignBottom="@+id/cardview_friend_picture"
        android:layout_toLeftOf="@+id/cardview_friend_checker"
        android:layout_alignParentTop="true" />
</RelativeLayout>