<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tossapon.stadiumfinder.GroupActivity.MatchDetailActivity.MatchDetailActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/view2">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:titleTextColor="#FFFFFF"
            android:id="@+id/activity_match_detail_toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view2"
        android:layout_above="@+id/button">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/activity_match_detail_stadium_image"
                    android:src="@drawable/basketball"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stadium 1"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF"
                    android:background="#99000000"
                    android:padding="6dp"
                    android:id="@+id/activity_match_detail_stadium_name"
                    android:gravity="right"
                    android:layout_gravity="right|bottom" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="0.2"
                        android:scaleType="centerInside"
                        android:src="@drawable/calendar_date_128"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="6dp"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="วันที่"/>
                        <TextView
                            android:id="@+id/activity_match_detail_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:text="0950764133"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="0.2"
                        android:scaleType="centerInside"
                        android:src="@drawable/clock_128"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="6dp"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:text="เวลา"/>
                        <TextView
                            android:id="@+id/activity_match_detail_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:text="0950764133"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ยังไม่มีคนเข้าร่วม"
                    android:id="@+id/activity_match_detail_noplayer"
                    android:gravity="center"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activity_match_detail_joiner">
                </android.support.v7.widget.RecyclerView>
            </FrameLayout>
            <fragment
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_margin="6dp"
                android:id="@+id/activity_match_detail_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="#009688"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:text="เข้าร่วม"
        android:id="@+id/button" />
</RelativeLayout>
